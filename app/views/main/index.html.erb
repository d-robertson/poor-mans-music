<h1>Music Page</h1>

<%= form_tag(root_path, method: :GET) do %>
  <%= label_tag(:term, 'Search') %>
  <%= text_field_tag(:term) %>

  <%= submit_tag('Search') %>
<% end %>

<% @data.each do |music| %>
  <%= image_tag(music['artworkUrl100']) %>
  <h2>
    <%= music['artistName'] %>
    <small><%= music['trackName'] %></small>
  </h2>
  <audio href="<%= music['previewUrl'] %>" controls></audio>
<% end %>
